<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".ui.notaaluno.NotaDoAluno">

    <EditText
        android:id="@+id/editNome"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:inputType="textPersonName"
        android:hint="Nome" />

    <EditText
        android:id="@+id/editAva1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:inputType="numberDecimal"
        android:hint="Nota 1 avaliação" />

    <EditText
        android:id="@+id/editAva2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:inputType="numberDecimal"
        android:hint="Nota 2 avaliação" />


    <TextView
        android:id="@+id/textTotalValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="16dp"
        android:textSize="40sp"
        android:textColor="@color/darkBlue"
        android:text="Resultado" />

    <Button
        android:id="@+id/bttCalcular"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:paddingVertical="18dp"
        android:textSize="20sp"
        android:background="@color/white"
        android:textColor="@color/white"
        android:text="Calcular"
        />
    <Button
        android:id="@+id/bttSair"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="40dp"
        android:layout_marginHorizontal="130dp"
        android:padding="16dp"
        android:backgroundTint="#F6564B"
        android:textSize="20sp"
        android:text="Sair"/>


</LinearLayout>