<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.imc.TelaImc">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <EditText
            android:id="@+id/editPeso"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:layout_marginTop="25dp"
            android:inputType="numberDecimal"
            android:hint="Peso (kg)"/>
        <EditText
            android:id="@+id/editAltura"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:layout_marginTop="25dp"
            android:inputType="numberDecimal"
            android:hint="Altura (m)"/>
        <TextView
            android:id="@+id/textImc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="16dp"
            android:textSize="30sp"
            android:textColor="#85D385"
            android:textAllCaps="true"
            android:text="imc:"/>
        <TextView
            android:id="@+id/textResult"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="16dp"
            android:textSize="30sp"
            android:textColor="#85D385"
            android:textAllCaps="true"
            android:text="Classificação:"/>

        <Button
            android:id="@+id/bttCalcular"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="40dp"
            android:layout_marginHorizontal="120dp"
            android:padding="16dp"
            android:backgroundTint="#85D385"
            android:textSize="20sp"
            android:text="Calcular"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="16dp"
            android:textSize="25sp"
            android:textColor="#2196F3"
            android:text="Informe seus dados!"/>

        <Button
            android:id="@+id/bttSair"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="40dp"
            android:layout_marginHorizontal="150dp"
            android:padding="16dp"
            android:backgroundTint="#F6564B"
            android:textSize="20sp"
            android:text="Sair"/>

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>